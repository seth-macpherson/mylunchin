<!DOCTYPE html>
<html>
  <head>
    <title>My Lunch In : <%= controller.controller_name + '.' + controller.action_name %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        <div class="inner">
          <div class="logo">
            <a href="http://localhost:3001/" class="table">
              <img src="/assets/table.png" alt="Table">
            </a>
            <h1>My Lunch In</h1>
            <h5>Today @ Nora's Table</h5>
          </div>
          <%= render :partial => "layouts/navigation" %>
          <div class="clear"></div>
        </div>
      </div>
      <%= yield %>
      <%= render :template => "layouts/footer" %>
    </div>
  </body>
</html>